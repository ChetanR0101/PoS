<?xml version='1.0' encoding='utf-8'?>
<odoo>
         <data noupdate="1">
            <!--Email template -->
            <record id="checkout_invoice_email_template" model="mail.template">
                <field name="name">Checkout Invoice: Send by email</field>
                <field name="model_id" ref="Pos.model_checkout"/>
                <field name="email_from">chetan.rathod@prisms.in</field>
                <field name="email_to">{{ object.email_id.id }}</field>
                <field name="subject">Invoice for PoS order (Ref {{ object.invoice_id or 'n/a' }})</field>
                <field name="body_html" type="html">
                    <div style="margin: 0px; padding: 0px;">
                        <p style="margin: 0px; padding: 0px; font-size: 13px;">
                            Dear ${object.name}
                            <br /><br />
                            Here is your PoS invoice of Invoice id ${object.invoice_id} created on ${object.date}
                            <br /><br /> 
                            The invoice amount in ${object.grand_sum}
                            <br /><br /> 
                            Thank You for Shopping with us Have A Good Day!
                            
                        </p>
                    </div>
                </field>
                <field name="report_template" ref="report_checkout"/>
                <field name="report_name">Invoice_${(object.invoice_id)}</field>
            </record>
    
            
            
        </data>
</odoo>