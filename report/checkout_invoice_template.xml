<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="invoice" >
            
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.basic_layout">
                    <link rel="stylesheet" href="/Pos/static/src/css/main.css"/>
                    <div class="page">
                        <table class="table table-borderless">
                            <tr>
                                <td width="25%">
                                    <p style="text-align:center;padding-top:10px;">
                                        <img class="img" src="/Pos/static/src/img/Prisms_logo.png" border="1" width="80%" />
                                    </p>
                                </td>
                                <td width="75%" style="padding-top:0px">
                                    <p>
                                        <h1>Prisms Communications</h1>
                                    </p>
                                    <p class="mb-0">25/4/8, Shiv Swami Samarth Math Marg, Vittalvadi, Hingne Khurd, Pune, Maharashtra, 411051
                                    </p>
                                    <p class="mb-0">Phone: (+91) 9096046666 | (+91) 9930055390
                                    </p>
                                    <p><span class="mr-5">Email : contact@prisms.in </span>   Website : prisms.in
                                    </p>
                                </td>
                            </tr>
                        </table>
                        <h3 style="text-align:center"><strong>INVOICE</strong></h3>
                        <div class="container">
                            <div class="row">
                                <div class="col-6">
                                    <div class="row">
                                        <div class="col-3">
                                            <p> TO:</p>
                                        </div>
                                        <div class="col-9">
                                            <p t-field="o.name"></p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="row">
                                        <div class="col-7">
                                            <p>INVOICE NO:</p>
                                        </div>
                                        <div class="col-5">
                                            <p t-field="o.invoice_id"></p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-7">
                                            <p>YOUR ORDER NO:</p>
                                        </div>
                                        <div class="col-5">
                                            <p t-field="o.id"></p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-7">
                                            <p>DATE:</p>
                                        </div>
                                        <div class="col-5">
                                            <p t-field="o.date"></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <table class="table table-borderless product-table">
                            <colgroup>
                                <col style="width:47%;"/>
                                <col style="width:12%;"/>
                                <col style="width:13%;"/>
                                <col style="width:13%;"/>
                                <col style="width:15%;"/>
                            </colgroup>
                            <thead>
                                <tr>
                                <th scope="col">Product Name</th>
                                <th scope="col">QTY</th>   
                                <th scope="col">UNIT PRICE</th>
                                <th scope="col">DISCOUNT</th>
                                <th scope="col">AMOUNT</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="subtotal" t-value="0"></t>
                                <t t-foreach="o.product_ids" t-as="p">
                                    <tr>
                                        <td><t t-out="p.name.name"/></td>
                                        <td class="text-center"><t t-out="p.qut"/></td>
                                        <td class="text-center">Rs <t t-out="p.discount"/></td>
                                        <td class="text-center">Rs <t t-out="p.price"/></td>
                                        <td class="text-center">Rs
                                            <t t-set="amount" t-value="p.qut * p.price"/>
                                            <t t-out="amount"/>
                                            <t t-set="subtotal" t-value="subtotal + amount"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <table class="table table-borderless detail-table">
                            <colgroup>
                                <col style="width:59%;"/>
                                <col style="width:26%;"/>
                                <col style="width:15%;"/>
                            </colgroup>
                            <tbody>
                                <tr>
                                    <td><p>All payments to be made in Indian Rs</p></td>
                                    <th class="total-border">SUBTOTAL:</th>
                                    <th class="total-border">Rs
                                        <t t-out="subtotal"/>
                                    </th>
                                </tr>
                                <tr>
                                    <td><p>Cheques to made in favour of:</p></td>
                                    <th class="total-border">GST 7%:</th>
                                    <th class="total-border">Rs
                                        <t t-set="gst7" t-value="subtotal * 0.07"/><t t-out="'%.2f'% gst7"/>
                                    </th>
                                </tr>
                                <tr>
                                    <td><p><strong>"Prisms Communications"</strong></p></td>
                                    <th class="total-border">GRAND TOTAL:</th>
                                    <th class="total-border">Rs
                                        <t t-set="grandTotal" t-value="subtotal + gst7"/><t t-out="'%.2f'% grandTotal"/>
                                    </th>
                                </tr>
                                <tr>
                                    <td><p>Our Banker:</p></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td><p>ABC Bank Limited</p></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td><p>Hingne Branch</p></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td><p>Sinhagad Road</p></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td><p>Pune, Maharashtra, 411051</p></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td><p>ACC NO.:  000-000-000</p></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td><p>Bank Code: 0000 Branch Code: 000</p></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td colspan="2"  style="text-align: center; border-top: 1px solid #000"><p>AUTHORISED SIGNATURE</p></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
